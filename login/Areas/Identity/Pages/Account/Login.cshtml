@page
@model LoginModel

@{
    ViewData["Title"] = "Hoş Geldiniz";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
    //Layout = "~/Views/Shared/_LoginAdmin.cshtml";
}


<!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1></div>


                                            <form class="user" id="account" method="post">
                                                <div asp-validation-summary="All" class="text-danger"></div>
                                                <div class="form-group">
                                                    <input asp-for="Input.Email" class="form-control form-control-user" placeholder="Email adresinizi giriniz..."/>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input asp-for="Input.Password" class="form-control form-control-user" placeholder="Şifrenizi giriniz" />
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox small">
                                                        <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input" id="customCheck" />
                                                        <label asp-for="Input.RememberMe" class="custom-control-label" for="customCheck">
                                                            
                                                            Beni Hatırla
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <button type="submit" class="btn btn-primary btn-user btn-block">Giriş Yap</button>
                                                </div>
                                            </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href='/Identity/Account/ForgotPassword'>Şifremi Unuttum</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href='/Identity/Account/Register'>Bir hesap oluşturun!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
